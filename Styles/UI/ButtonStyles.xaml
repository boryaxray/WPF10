            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#146c43"/>
                <Setter Property="BorderBrush" Value="#146c43"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#0f5132"/>
                <Setter Property="BorderBrush" Value="#0f5132"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>