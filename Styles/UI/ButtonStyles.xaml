<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style x:Key="BaseButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource ButtonForeground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Width" Value="160"/>
        <Setter Property="Height" Value="38"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="8,4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#2BA8A1"/>
                <Setter Property="BorderBrush" Value="#2BA8A1"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#239892"/>
                <Setter Property="BorderBrush" Value="#239892"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <!-- Стандартная кнопка -->
    <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#2BA8A1"/>
                <Setter Property="BorderBrush" Value="#2BA8A1"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#239892"/>
                <Setter Property="BorderBrush" Value="#239892"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Кнопка добавления с картинкой -->
    <Style x:Key="AddButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Background" Value="{DynamicResource AddButtonBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource AddButtonForeground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource AddButtonBorder}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="/Resources/add.png" Width="16" Height="16" VerticalAlignment="Center"/>
                            <TextBlock Text="{TemplateBinding Content}" VerticalAlignment="Center" Margin="6,0,0,0" 
                                       FontSize="{TemplateBinding FontSize}" FontWeight="{TemplateBinding FontWeight}"
                                       Foreground="{TemplateBinding Foreground}"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#2BA8A1"/>
                <Setter Property="BorderBrush" Value="#2BA8A1"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#239892"/>
                <Setter Property="BorderBrush" Value="#239892"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Кнопка удаления с картинкой -->
    <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Background" Value="{DynamicResource DeleteButtonBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource DeleteButtonForeground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource DeleteButtonBorder}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="/Resources/delete.png" Width="16" Height="16" VerticalAlignment="Center"/>
                            <TextBlock Text="{TemplateBinding Content}" VerticalAlignment="Center" Margin="6,0,0,0"
                                       FontSize="{TemplateBinding FontSize}" FontWeight="{TemplateBinding FontWeight}"
                                       Foreground="{TemplateBinding Foreground}"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#D4493F"/>
                <Setter Property="BorderBrush" Value="#D4493F"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#C2392F"/>
                <Setter Property="BorderBrush" Value="#C2392F"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Широкая кнопка для длинного текста -->
    <Style x:Key="WideButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
        <Setter Property="MinWidth" Value="160"/>
        <Setter Property="Padding" Value="8,8"/>
        <Setter Property="FontSize" Value="11"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#2BA8A1"/>
                <Setter Property="BorderBrush" Value="#2BA8A1"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Очень широкая кнопка для самого длинного текста -->
    <Style x:Key="ExtraWideButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
        <Setter Property="MinWidth" Value="180"/>
        <Setter Property="Padding" Value="6,8"/>
        <Setter Property="FontSize" Value="11"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#2BA8A1"/>
                <Setter Property="BorderBrush" Value="#2BA8A1"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>