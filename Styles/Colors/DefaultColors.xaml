<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Светлая тема -->
    <SolidColorBrush x:Key="WindowBackground" Color="#F5FAFB"/>
    <SolidColorBrush x:Key="PanelBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextColor" Color="#2E3B4E"/>
    <SolidColorBrush x:Key="SecondaryTextColor" Color="#6E7A89"/>
    <SolidColorBrush x:Key="BorderColor" Color="#DEE2E6"/>
    <SolidColorBrush x:Key="InputBackground" Color="#F0F6F8"/>
    <SolidColorBrush x:Key="AccentColor" Color="#3A9AD9"/>
    <SolidColorBrush x:Key="DividerColor" Color="#E0E0E0"/>

    <!-- Меню -->
    <SolidColorBrush x:Key="MenuBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="MenuForeground" Color="#2E3B4E"/>

    <!-- Кнопки -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#33B8B1"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#33B8B1"/>

    <!-- Кнопка добавления -->
    <SolidColorBrush x:Key="AddButtonBackground" Color="#33B8B1"/>
    <SolidColorBrush x:Key="AddButtonForeground" Color="White"/>
    <SolidColorBrush x:Key="AddButtonBorder" Color="#33B8B1"/>

    <!-- Кнопка удаления -->
    <SolidColorBrush x:Key="DeleteButtonBackground" Color="#E65A4F"/>
    <SolidColorBrush x:Key="DeleteButtonForeground" Color="White"/>
    <SolidColorBrush x:Key="DeleteButtonBorder" Color="#E65A4F"/>

    <!-- Ошибки валидации -->
    <SolidColorBrush x:Key="ErrorBackground" Color="#FFE8E8"/>
    <SolidColorBrush x:Key="ErrorBorder" Color="#D93025"/>
    <SolidColorBrush x:Key="ErrorText" Color="#D93025"/>
</ResourceDictionary>