<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Светлая тема -->
    <SolidColorBrush x:Key="WindowBackground" Color="White"/>
    <SolidColorBrush x:Key="PanelBackground" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="TextColor" Color="Black"/>
    <SolidColorBrush x:Key="BorderColor" Color="#DEE2E6"/>

    <!-- Меню -->
    <SolidColorBrush x:Key="MenuBackground" Color="#343A40"/>
    <SolidColorBrush x:Key="MenuForeground" Color="White"/>

    <!-- Кнопки -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#6C757D"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#6C757D"/>

    <!-- Кнопка добавления -->
    <SolidColorBrush x:Key="AddButtonBackground" Color="#198754"/>
    <SolidColorBrush x:Key="AddButtonForeground" Color="White"/>
    <SolidColorBrush x:Key="AddButtonBorder" Color="#198754"/>

    <!-- Кнопка удаления -->
    <SolidColorBrush x:Key="DeleteButtonBackground" Color="#DC3545"/>
    <SolidColorBrush x:Key="DeleteButtonForeground" Color="White"/>
    <SolidColorBrush x:Key="DeleteButtonBorder" Color="#DC3545"/>
</ResourceDictionary>