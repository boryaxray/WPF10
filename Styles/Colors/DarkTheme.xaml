<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Темная тема -->
    <SolidColorBrush x:Key="WindowBackground" Color="#1E2A32"/>
    <SolidColorBrush x:Key="PanelBackground" Color="#2A3C46"/>
    <SolidColorBrush x:Key="TextColor" Color="#D6F4FF"/>
    <SolidColorBrush x:Key="SecondaryTextColor" Color="#A1B4BF"/>
    <SolidColorBrush x:Key="BorderColor" Color="#3C4D55"/>
    <SolidColorBrush x:Key="InputBackground" Color="#324650"/>
    <SolidColorBrush x:Key="AccentColor" Color="#4FC3C7"/>
    <SolidColorBrush x:Key="DividerColor" Color="#3C4D55"/>

    <!-- Меню -->
    <SolidColorBrush x:Key="MenuBackground" Color="#2A3C46"/>
    <SolidColorBrush x:Key="MenuForeground" Color="#D6F4FF"/>

    <!-- Кнопки -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#3388B1"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#3388B1"/>

    <!-- Кнопка добавления -->
    <SolidColorBrush x:Key="AddButtonBackground" Color="#3388B1"/>
    <SolidColorBrush x:Key="AddButtonForeground" Color="White"/>
    <SolidColorBrush x:Key="AddButtonBorder" Color="#3388B1"/>

    <!-- Кнопка удаления -->
    <SolidColorBrush x:Key="DeleteButtonBackground" Color="#E65A4F"/>
    <SolidColorBrush x:Key="DeleteButtonForeground" Color="White"/>
    <SolidColorBrush x:Key="DeleteButtonBorder" Color="#E65A4F"/>

    <!-- Ошибки валидации -->
    <SolidColorBrush x:Key="ErrorBackground" Color="#3B1E1E"/>
    <SolidColorBrush x:Key="ErrorBorder" Color="#E65A4F"/>
    <SolidColorBrush x:Key="ErrorText" Color="#FFB3B3"/>

</ResourceDictionary>