<Application x:Class="WPF8_PRACT.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:local="clr-namespace:WPF8_PRACT"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="/Styles/Colors/DefaultColors.xaml"/>
                <ResourceDictionary Source="/Styles/UI/CommonStyles.xaml"/>
                <ResourceDictionary Source="/Styles/UI/TextStyles.xaml"/>
                <ResourceDictionary Source="/Styles/UI/FormStyles.xaml"/>
                <ResourceDictionary Source="/Styles/UI/ButtonStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
 