<Page x:Class="WPF8_PRACT.Pages.StartPriem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF8_PRACT.Pages" xmlns:validators="clr-namespace:WPF8_PRACT.ValidationRules"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="WhiteSmoke"
      Title="StartPriem">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource FormBorder}">
            <StackPanel>
                <TextBlock Text="Информация о пациенте" Style="{StaticResource SectionTitle}"/>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Имя:" Style="{StaticResource BoldText}"/>
                    <TextBlock Text="{Binding CurrentPacient.Name}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Фамилия:" Style="{StaticResource BoldText}"/>
                    <TextBlock Text="{Binding CurrentPacient.LastName}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Отчество:" Style="{StaticResource BoldText}"/>
                    <TextBlock Text="{Binding CurrentPacient.MiddleName}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Возраст:" Style="{StaticResource BoldText}"/>
                    <TextBlock Text="{Binding CurrentPacient.Age}"/>
                    <TextBlock Text=" лет"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Статус:" Style="{StaticResource BoldText}"/>
                    <TextBlock Text="{Binding CurrentPacient.AgeStatus}"/>
                </StackPanel>

                <Separator/>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Лечащий доктор:" Style="{StaticResource BoldText}"/>
                    <TextBlock Text="{Binding CurrentDoctor.LastName}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource FormBorder}">
            <StackPanel>
                <TextBlock Text="Данные приема" Style="{StaticResource SectionTitle}"/>

                <Label Content="Дата приёма:" Style="{StaticResource FormLabel}"/>
                <DatePicker x:Name="datePicker">
                    <DatePicker.SelectedDate>
                        <Binding Path="NewAppointment.Date" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True">
                            <Binding.ValidationRules>
                                <validators:DateValidationRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </DatePicker.SelectedDate>
                </DatePicker>
                <ItemsControl ItemsSource="{Binding ElementName=datePicker, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" Style="{StaticResource ErrorTextStyle}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Label Content="Диагноз:" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="diagnosisTextBox" Style="{StaticResource WrappedTextBox}">
                    <TextBox.Text>
                        <Binding Path="NewAppointment.Diagnosis" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True">
                            <Binding.ValidationRules>
                                <validators:DiagnosisValidationRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl ItemsSource="{Binding ElementName=diagnosisTextBox, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" Style="{StaticResource ErrorTextStyle}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Label Content="Рекомендации:" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="recommendationsTextBox" Style="{StaticResource WrappedTextBox}">
                    <TextBox.Text>
                        <Binding Path="NewAppointment.Recommendations" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True">
                            <Binding.ValidationRules>
                                <validators:RecommendationsValidationRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl ItemsSource="{Binding ElementName=recommendationsTextBox, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" Style="{StaticResource ErrorTextStyle}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource CenterStackPanel}">
            <TextBlock Text="{Binding CurrentPacient.DaysSinceLastAppointment}" Style="{StaticResource InfoText}"/>
            <Button Content="Добавить прием" Click="AddPriems_Click" Style="{StaticResource AddButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>
