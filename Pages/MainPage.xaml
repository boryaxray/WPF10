<Page x:Class="WPF8_PRACT.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF8_PRACT.Pages" xmlns:local1="clr-namespace:WPF8_PRACT"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1000" Background="WhiteSmoke"
      Title="Главная страница">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="1" Style="{StaticResource HorizontalButtonPanel}">
            <Button Content="Создать пациента" Click="AddPacient_Click" Style="{StaticResource AddButtonStyle}"/>
            <Button Content="Начать прием" Click="StartPriem_Click"/>
            <Button Content="Изменить информацию" Click="EditPacient_Click"/>
            <Button Content="Удалить пациента" Click="DeletePacient_Click" Style="{StaticResource DeleteButtonStyle}"/>
        </StackPanel>

        <ListView Grid.Row="1" Grid.Column="1" 
                  ItemsSource="{Binding Pacients}" 
                  SelectedItem="{Binding SelectedPacient, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource FormBorder}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Фамилия: " Style="{StaticResource BoldText}"/>
                                <TextBlock Text="{Binding LastName}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Имя: " Style="{StaticResource BoldText}"/>
                                <TextBlock Text="{Binding Name}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Телефон: " Style="{StaticResource BoldText}"/>
                                <TextBlock Text="{Binding PhoneNumber, StringFormat={}{0:\(###\) ###-##-##}}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Дата рождения: " Style="{StaticResource BoldText}"/>
                                <TextBlock Text="{Binding Birthday, StringFormat={}{0:dd.MM.yyyy}}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource FormBorder}">
            <StackPanel>
                <TextBlock Text="Информация о враче" Style="{StaticResource SectionTitle}"/>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Фамилия:" Style="{StaticResource BoldText}"/>
                    <TextBlock Text="{Binding CurrentDoctor.LastName}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Имя:" Style="{StaticResource BoldText}"/>
                    <TextBlock Text="{Binding CurrentDoctor.Name}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Отчество:" Style="{StaticResource BoldText}"/>
                    <TextBlock Text="{Binding CurrentDoctor.MiddleName}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Специализация:" Style="{StaticResource BoldText}"/>
                    <TextBlock Text="{Binding CurrentDoctor.Specialisation}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
